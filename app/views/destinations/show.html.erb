<%- model_class = Destination -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:aiport_code) %>:</strong></dt>
  <dd><%= @destination.aiport_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:airport_name) %>:</strong></dt>
  <dd><%= @destination.airport_name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              destinations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_destination_path(@destination), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              destination_path(@destination),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
