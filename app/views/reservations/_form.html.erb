<%= form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.hidden_field :flight_id %>
	<div><!-- Display some shit -->
	  <%= @reservation.flight_schedule.gofroms.aiport_code %> -  
		<%= @reservation.flight_schedule.gotos.aiport_code %><BR/>
		<%= @reservation.flight_schedule.depart_on.strftime("%H:%M") %> on <%= @reservation.flight_schedule.depart_at.strftime("%d %B %Y") %>
	</div><BR/><BR/><BR/>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
	
  <div class="control-group">
    <%= f.label :identification, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :identification, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn' %>
  </div>
<% end %>
